{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "baseUrl": "src",
    "paths": {
      "@core/*": ["core/*"],
      "@drivers/*": ["drivers/*"],
      "@utils/*": ["utils/*"]
    },

    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true
  }
}
